<div class="container">
     <div class="page-title-container">
        <h2>Book Club List</h2>
    </div>
    <% if (currentUser && currentUser.role === 'admin') { %>
        <div class="add-button-container">
            <a href="/clubs/create" class="btn btn-primary">Create New Club</a>
        </div>
    <% } %>
    <% if (clubs.length > 0) { %>
        <div class="card-grid">
            <% clubs.forEach(club => { %>
                <div class="card">
                    <div>
                        <h3><%= club.name %></h3>
                        <p><%= club.description.substring(0, 100) %><% if (club.description.length > 100) { %>...<% } %></p>
                        <p><small>Admin: <%= club.admin ? club.admin.username : 'N/A' %></small></p>
                    </div>
                    <div class="actions">
                        <a href="/clubs/<%= club.id %>" class="btn btn-primary">Detail</a>
                        <% if (currentUser && (currentUser.role === 'admin' || currentUser.id === club.adminId)) { %>
                            <a href="/clubs/<%= club.id %>/edit" class="btn btn-secondary">Edit</a>
                            <form action="/clubs/<%= club.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this club?');">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p>There are no book clubs yet. Be the first to create one!</p>
    <% } %>
</div>