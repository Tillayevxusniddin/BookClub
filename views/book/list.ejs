<div class="container">
    <div class="page-title-container">
        <h2>All Books List</h2>
    </div>
    <% if (currentUser && currentUser.role === 'admin') { %>
        <div class="add-button-container">
            <a href="/books/create" class="btn btn-primary">Add New Book</a>
        </div>
    <% } %>
    <% if (books.length > 0) { %>
        <div class="card-grid">
            <% books.forEach(book => { %>
                <div class="card">
                    <div>
                        <h3><%= book.title %></h3>
                        <p><strong>Author:</strong> <%= book.author %></p>
                        <p><small>Club: <%= book.Club ? book.Club.name : 'N/A' %></small></p>
                        <p><%= book.description.substring(0, 100) %><% if (book.description.length > 100) { %>...<% } %></p>
                    </div>
                    <div class="actions">
                        <a href="/books/<%= book.id %>" class="btn btn-primary">Detail</a>
                        <% if (currentUser && currentUser.role === 'admin') { %>
                            <a href="/books/<%= book.id %>/edit" class="btn btn-secondary">Edit</a>
                            <form action="/books/<%= book.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?');">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p>There are no books available yet. If you are an admin, be the first to add one!</p>
    <% } %>
</div>